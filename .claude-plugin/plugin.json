{
  "name": "claude-memory",
  "version": "0.2.0",
  "description": "Persistent memory and coordination system for Claude instances. Enables cross-session knowledge retention, task delegation between instances, and multi-instance coordination.",
  "author": {
    "name": "jpathak",
    "email": ""
  },
  "license": "MIT",
  "repository": "https://github.com/jpathak/claude-memory",
  "keywords": [
    "memory",
    "persistence",
    "coordination",
    "multi-instance"
  ],
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/load-memories.sh"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/detect-memory-triggers.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/check-memory-storage.sh"
          }
        ]
      }
    ]
  }
}
